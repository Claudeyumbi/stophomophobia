{# src/AppBundle/Resources/views/Comment/menu_comment.html.twig #}

<!-- {# Ce template n'hérite de personne,
   tout comme le template inclus avec {{ include() }}. #} -->

<div class="nav nav-pills nav-stacked">
  <p><strong>Les tois derniers commentaires</strong></p>
  {% for comment in listComments %}
      {% if is_granted('ROLE_AUTEUR') %}
      <a href="{{ path('comment_view', {'id': comment.id }) }}">
      {%  endif %}
      <p><strong>{{ comment.author }}</strong>:<i>"{{ comment.content }}"</i>
    </a>Publié le {{ comment.date|date('d-m-Y à H:i:s') }}</p>

    <!-- <a class="btn btn-info btn-sm" href="{# path('witness_view', {'id': witness.id}) #}"> Voir et Ajouter un témoignage
    </a> -->
  {% endfor %}
</div>
