{# src/App/Witness/index.html.twig #}

{% extends "layout.html.twig" %}

{% block title %}
  Accueil - {{ parent() }}
{% endblock %}

{% block body %}

  <h2>Liste des Témoignages</h2>

<p>Nombre des témoignages : {{ countComment }} </p>
  <ul>
    {% for comment in listComments %}
      <li>
        <a style="text-decoration: none" href="{{ path('comment_view', {'id':comment.id}) }}">
          {{ comment.content }}
        </a>
        Par<div style="color: blue"> {{ comment.author }}</div>
        Le {{ comment.date|date('d/m/Y - H:i:s') }}
      </li>

    {% else %}
      <li>Pas (encore !) de témoignages</li>
    {% endfor %}
  </ul>


  <ul class="pagination">
  {# On utilise la fonction range(a, b) qui crée un tableau de valeurs entre a et b #}
  {% for p in range(1, nbPages) %}
    <li{% if p == page %} class="active"{% endif %}>
      <a href="{{ path('witness', {'page': p}) }}">{{ p }}</a>
    </li>
  {% endfor %}
</ul>
</div>
{% endblock %}
