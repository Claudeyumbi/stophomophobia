{% extends "layout.html.twig" %}

{% block title %}
  Page d'accueil - {{ parent() }}
{% endblock %}

  {% block body %}
      <div class="row justify-content-md-center">
        <div class="col-12">
          {% for witness in listWitnesss %}

          <div class="card text-center cardSearch" style="width: 100rem;">
            <div class="card-block">
              <h4 class="card-title">{{ witness.title }}</h4>
              <h4 class="card-title">{{ witness.username }}</h4>
              <!-- <p class="card-text">{{ witness.content(0, 60, "...") }}</p> -->

              <p class="card-text cardbottom"><p> {# date|date('d/m/Y - H:i:s') #} </p>
              <a href="{{ path('witness_view', {'slug': witness.slug}) }}"
              class="btn btn-outline my-2 my-sm-0 newoutline">Détail du témoignage</a>
            </div>
          </div>
          {% endfor %}
        </div>
      </div>

      <a href="{{path('core_home')}}">Retour sur l'accueil</a>

{% endblock %}
